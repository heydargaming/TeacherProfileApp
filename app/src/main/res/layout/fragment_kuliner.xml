<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7C6C6C6"
    tools:context=".KulinerFragment">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="KULINER"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Kuliner adalah kompetensi keahlian yang mempelajari tentang ilmu terkait dengan seni dalam menyiapkan, memasak, dan menghidangkan makanan siap saji. Di Indonesia, disiplin ilmu ini dapat dipelajari di Sekolah Menengah Kejuruan (SMK). Seorang yang memiliki keahlian dalam tata boga dinamakan sebagai koki, juru masak atau chef."
        android:textSize="20sp"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:layout_marginTop="70sp"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="380sp"
        android:layout_height="wrap_content"
        android:src="@drawable/kuliner"
        android:layout_gravity="center"
        android:layout_marginTop="120sp"/>
</FrameLayout>
</ScrollView>
